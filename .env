# .env.example
# Database Configuration (MySQL)
DATABASE_URL="mysql://root:@localhost:3306/inventory_db"

# Example configurations:
# Local MySQL: mysql://root:password@localhost:3306/inventory_db
# Docker MySQL: mysql://root:password@mysql:3306/inventory_db
# Remote MySQL: mysql://user:pass@remote-host:3306/inventory_db

# Application Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration (untuk auth nanti)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000